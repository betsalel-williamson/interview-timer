{
  "name": "Interview Timer",
  "version": "1.0.0",
  "description": "A simple static web application for managing multiple timers simultaneously for interview practice",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "preview": "vite preview --host",
    "start": "npm run dev",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run tests/*.test.js",
    "test:unit:watch": "vitest tests/*.test.js",
    "test:unit:coverage": "vitest run tests/*.test.js --coverage 2>&1 | tee coverage-output.log && node scripts/extract-coverage-summary.js coverage-output.log",
    "test:e2e": "playwright test",
    "test:e2e:report": "playwright test --reporter=html",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test:unit && npm run test:e2e",
    "lint": "prettier --check .",
    "lint:fix": "prettier --write .",
    "prepare": "husky"
  },
  "keywords": [
    "timer",
    "Interview Timer",
    "web-app",
    "interview-practice",
    "alpinejs",
    "vite"
  ],
  "author": "Interview Timer Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/betsalel-williamson/interview-timer.git"
  },
  "bugs": {
    "url": "https://github.com/betsalel-williamson/interview-timer/issues"
  },
  "homepage": "https://github.com/betsalel-williamson/interview-timer#readme",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@vitest/coverage-v8": "^3.2.4",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "prettier": "3.6.2",
    "terser": "^5.44.0",
    "vite": "^7.1.10",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "alpinejs": "^3.15.0"
  }
}

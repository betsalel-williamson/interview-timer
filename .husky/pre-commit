#!/usr/bin/env sh
echo "🔍 Running pre-commit checks..."

echo "📝 Checking and fixing code formatting..."
pnpm run lint:fix
if [ $? -ne 0 ]; then
  echo "❌ Code formatting failed."
  exit 1
fi

echo "📦 Staging any formatting changes..."
git update-index --again

echo "🧪 Running unit tests..."
pnpm run test:unit
if [ $? -ne 0 ]; then
  echo "❌ Unit tests failed. Please fix failing tests before committing."
  exit 1
fi

echo "🖼️ Optimizing PNG snapshots..."
pnpm run optimize:snapshots
if [ $? -ne 0 ]; then
  echo "❌ PNG optimization failed."
  exit 1
fi

echo "📦 Staging optimized snapshots..."
git add tests/e2e/**/*.png

echo "✅ All pre-commit checks passed!"

